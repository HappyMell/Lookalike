<% include ../partials/store/storeheader%>

<% include ../partials/header%>


 <div class="container newsContainer" id="login">
    <form class="form-signin" action="/login" method="POST">
 <% if (hasErrors) { %>
      <div class="alert alert-danger">
      <p><%= messages %></p>
      </div>
    <%}%>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email address">

  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
  <div class="signIn">
       <button class="btn btn-lg btn-block btn-outline-dark registerButton" type="submit">Sign In</button>
  </div>
 <div class="returnButton">
 <ul>
 <li><p><a href="/register">Create Account</a></p></li>
 <li> <p><a href="/store">Return to store</a></p></li>
 </ul>
 

 </div> 

</form>
</div>

<%include ../partials/footer%>